<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <solid android:color="@color/lightskyblue" />
            <corners android:radius="@dimen/dp_2" />
            <stroke android:width="2px" android:color="@color/lightskyblue"></stroke>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <solid android:color="@color/_9" />
            <corners android:radius="@dimen/dp_2" />
            <stroke android:width="2px" android:color="@color/_9"></stroke>
        </shape>
    </item>
    <item android:state_pressed="false" android:drawable="@drawable/bg_blue_radus" />
</selector>
